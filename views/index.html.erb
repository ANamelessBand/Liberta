<div class="col-md-6">  <div class="panel panel-default">    <div class="panel-heading">Новини</div>    <div class="panel-body">      <% @last_five_news.each do |entry| %>      <h4><%= entry.title %></h4>      <span><em><%= entry.date_of_publication %></em></span>      <p><%= entry.content %></p>      <br />      <hr />      <% end %>      <% if administrator? %>         <a href="#news_modal" class="btn btn-primary" data-toggle="modal">Добави новина</a>          <div class="modal fade" id="news_modal">            <div class="modal-dialog">              <div class="modal-content">                  <form id="news_upload_form" class="form-horizontal" method="post" action="/add-news">                    <fieldset>                      <div class="modal-header">                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>                      </div>                      <div class="modal-body">                        <!-- Form Name -->                        <legend>Добавяне на новина</legend>                        <input type="text" class="form-control" placeholder="Заглавие..." required="" id="news_title" name="news_title">                        <br />                        <textarea rows="4" cols="50" id="news_content" class="form-control" required="" name="news_content" placeholder="Съдържание..."></textarea>                      </div>                      <div class="modal-footer">                        <button type="submit" id="save_button" name="save_button" class="btn btn-success">Публикувай</button>                        <button type="button" class="btn btn-primary" data-dismiss="modal">Затвори</button>                      </div>                  </fieldset>                </form>              </div>            </div>          </div>      <% end %>    </div>  </div></div><div class="col-md-6">  <div class="panel panel-default">    <div class="panel-heading">Най-нови книги</div>    <div class="panel-body">      <%= show_print_table @last_prints %>    </div>  </div></div>