<div class="col-md-2">
  <a href="#" class="thumbnail"><img src="./img/profile.png" alt="..." /></a>
  <h3 class="text-center user-name"><%= @user.name %></h3>
</div>
<div class="col-md-10">
	<ul class="nav nav-tabs">
	  <li><a href="#recommended" data-toggle="tab">Препоръчани</a></li>
	  <li><a href="#read" data-toggle="tab">Прочетени</a></li>
	  <li><a href="#wishlist" data-toggle="tab">Желани</a></li>
	</ul>
	<div class="tab-content">
	  <div class="tab-pane active col-md-10" id="recommended">
	  	<h3>Препоръчани книги</h3>
			<table class="table table-striped table-hover">
				<thead>
				  <tr>
				    <th>Книга</th>
				    <th>Рейтинг</th>
				    <th>Коментар</th>
				  </tr>
				</thead>
				<tbody>
				  <tr>
				  	<% @user.last_recommendations(5).each do |recommendation| %>
				    <td>
				    	<%= to_link("../prints/#{recommendation.print.id}", recommendation.print.title) %>
				    </td>
				    <td>
				    	<%= stars_span recommendation.rating %>
				    </td>
				    <td>
				    	<% if recommendation.comment and recommendation.comment.length > 30 %>
						    	<%= recommendation.comment[0..30] %>...
									 <a href="#modal_<%=recommendation.id%>"data-toggle="modal">виж още
						      </a>
						  <% else %>
							 <%= recommendation.comment %>
						  <% end %>
						</td>
					    <div class="modal fade" id="modal_<%=recommendation.id%>">
						    <div class="modal-dialog">
						      <div class="modal-content">
						        <div class="modal-header">
						          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						          <h4 class="modal-title">Коментар</h4>
						        </div>
						        <div class="modal-body">
						          <p>
						          <%= recommendation.comment %>
						          </p>
						        </div>
						        <div class="modal-footer">
						          <button type="button" class="btn btn-primary" data-dismiss="modal">Затвори</button>
						        </div>
						      </div>
						    </div>
						  </div>
					  </tr>
				  <% end %>
				</tbody>
			</table>
			<a href='<%= "./#{@user.id}/recommendations" %>' class="btn btn-info">всички препоръки</a>
	  </div>
	  <div class="tab-pane col-md-6" id="read">
  		<h3>Прочетени книги</h3>
			<table class="table table-striped table-hover">
				<thead>
				  <tr>
				    <th>Книга</th>
				    <th>Взета на</th>
				  </tr>
				</thead>
				<tbody>
				  <% @user.read.each do |loan|%>
				  <tr>
				    <td><%= to_link("../prints/#{loan.copy.print.id}", loan.copy.print.title) %></td>
				    <td><%= loan.date_loaned %></td>
				  </tr>
				  <% end %>
				</tbody>
			</table>
			<a href='<%= "./#{@user.id}/read" %>' class="btn btn-info">всички прочетени</a>
	  </div>
	  <div class="tab-pane col-md-6" id="wishlist">
  		<h3>Желани книги</h3>
			<table class="table table-striped table-hover">
				<thead>
				  <tr>
				    <th>Книга</th>
				    <% if @own_profile %>
					    <th>Действия</th>
					   <% end %>
				  </tr>
				</thead>
				<tbody>
					<% @user.wishes.each do |print| %>
				  <tr>
				    <td>
					  	<%= to_link("../prints/#{print.id}", print.title) %>
					  </td>
					<% if @own_profile %>
				    <td><a href="#" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-minus"></span> премахни</a></td>
				    <% end %>
				  </tr>
				  <% end %>
				</tbody>
			</table>
			<a href='<%= "./#{@user.id}/wishlist" %>' class="btn btn-info">всички желани</a>
		</div>
	</div>
</div>