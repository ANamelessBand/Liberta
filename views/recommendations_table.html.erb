<% if @prints.empty? %>
  <div class="alert alert-warning">
    Няма намерени записи
  </div>
<% else %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Корица</th>
      <th>Книга</th>
      <th>Автор</th>
      <th>Рейтинг</th>
      <th>Коментар</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @prints.each do |recommendation| %>
        <td class="cover"><img src=<%= "/img/prints/#{recommendation.print.id}.png" %> /></td>

        <td>
          <%= to_link("../prints/#{recommendation.print.id}", recommendation.print.title) %>
        </td>

        <td><%= authors_html recommendation.print %></a></td>

        <td><%= stars_span recommendation.rating %></td>

        <td>
          <% if recommendation.comment and recommendation.comment.length > 30 %>
              <%= recommendation.comment[0..30] %>...
               <a href="#modal_<%=recommendation.id%>"data-toggle="modal">виж още
              </a>
          <% else %>
           <%= recommendation.comment %>
          <% end %>
        </td>
        <div class="modal fade" id="modal_<%=recommendation.id%>">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Коментар</h4>
              </div>
              <div class="modal-body">
                <p>
                <%= recommendation.comment %>
                </p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Затвори</button>
              </div>
            </div>
          </div>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>