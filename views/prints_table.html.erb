<table class="table table-striped table-hover vertical-middle">
  <thead>
    <tr>
      <th>Корица</th>
      <th>Книга</th>
      <th>Автор</th>
      <th>Рейтинг</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @prints_collection.each do |print| %>
      <tr>
        <td class="cover"><img src="img/lord-of-the-rings-book-cover.jpg" /></td>
        <td><%= to_link "/prints/#{print.id}", print.title %></a></td>
        <td><%= authors_html print %></a></td>
        <td><%= stars_span(print.rating @ratings_last_month) %></td>
        <td>
          <a href="#modal_<%=print.id%>" class="btn btn-xs btn-primary" title="описание" data-toggle="modal">
            <%= glyphicon_span('info-sign') %>
          </a>
          <% if logged? %>
            <% if logged_user.has_wish(print) %>
              <a class="btn btn-xs btn-danger remove-wish-xs" data-for="<%= print.id %>" title="премахни от желани">
                <%= glyphicon_span('minus') %>
              </a>
            <% else %>
              <a class="btn btn-xs btn-success add-wish-xs" data-for="<%= print.id %>" title="добави в желани">
                <%= glyphicon_span('plus') %>
              </a>
            <% end %>
          <% else %>
              <a class="btn btn-xs btn-success" href="/login" title="добави в желани">
                <%= glyphicon_span('plus') %>
              </a>
          <% end %>
          <div class="modal fade" id="modal_<%=print.id%>">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title"><%= print.title %></h4>
                </div>
                <div class="modal-body">
                  <p>
                    <div class="pull-left from-right-1">
                      <img src="/img/lord-of-the-rings-book-cover.jpg" />
                    </div>
                    <%= print.description %>
                  </p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">Затвори</button>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
